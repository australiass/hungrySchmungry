<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/register-style.css">
    <script src="/js/login.js"></script>
</head>
    <%- include('partials/_navbar') %>
  <body>
    <div class="container">
      <div class="form-title">Account</div>
      <p id="errorMessage" style="display: none;">Email already in use.</p>
          <div class="form-group">
            <label for="register-name">Name</label>
            <input type="text" id="input-name" required>
          </div>
          <div class="form-group">
              <label for="register-email">Email</label>
              <input type="email" id="input-email" required>
          </div>
          <div class="form-group">
              <label for="register-password">Password</label>
              <input type="password" id="input-password" required>
          </div>
          <div class="form-group">
              <button type="button" id="submit-form">Register</button>
          </div>
        <div class="toggle-link" id="switch-form">Already have an account? Login</div>
      </div>
  </body>
</html>